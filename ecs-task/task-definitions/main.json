[
  {
    "name": "${NAME}",
    "image": "${IMAGE_NAME}:${IMAGE_TAG}",
    "essential": true,
    "command": ${COMMANDS},
    "environment": ${ENVIRONMENT_VARIABLES},
    "secrets": ${SECRETS_LIST},
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-create-group": "true",
            "awslogs-group": "/ecs/${PROJECT}-${ENVIRONMENT}/task",
            "awslogs-region": "${REGION}",
            "mode": "${ECS_FARGATE_LOG_MODE}"
        }
    }
  }
]
